{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Сборка C++ (MSYS2 MinGW 32-bit)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/bin/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "env": {
          "PATH": "C:/msys64/mingw32/bin;${env:PATH}"
        }
      },
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
